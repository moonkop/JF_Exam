<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        '-//Hibernate/Hibernate Mapping DTD 3.0//EN'
        'http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd'>
<hibernate-mapping>
    <class name="com.njmsita.exam.authentic.model.StudentModel" table="studdent">
        <id name="id">
            <generator class="assigned"/>
        </id>
        <properties name="student_id"/>
        <properties name="name"/>
        <properties name="mail"/>
        <properties name="id_card_no"/>
        <properties name="telephone"/>
        <properties name="password"/>
        <properties name="last_login_ip"/>
        <properties name="last_login_time"/>
        <properties name="createtime"/>
        <properties name="modifytime"/>

        <many-to-one name="school" column="school_id" class="com.njmsita.exam.manager.model.SchoolModel"/>
        <many-to-one name="classroom" column="classroom_id" class="com.njmsita.exam.manager.model.ClassroomModel"/>
        <many-to-one name="role" column="role_id" class="com.njmsita.exam.authentic.model.TroleModel"/>
    </class>
</hibernate-mapping>
