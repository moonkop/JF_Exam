<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        '-//Hibernate/Hibernate Mapping DTD 3.0//EN'
        'http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd'>
<hibernate-mapping>
    <class name="com.njmsita.exam.authentic.model.TresourceModel" table="tresource">
        <id name="id">
            <generator class="assigned"/>
        </id>
        <properties name="name"/>
        <properties name="remark"/>
        <properties name="seq"/>
        <properties name="url"/>
        <properties name="icon"/>
        
        <many-to-one name="parent" column="pid" class="com.njmsita.exam.authentic.model.TresourceModel"/>
        
        <set name="childs">
            <key column="pid"/>
            <one-to-many class="com.njmsita.exam.authentic.model.TresourceModel"/>
        </set>
    </class>

</hibernate-mapping>
