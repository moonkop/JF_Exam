<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        '-//Hibernate/Hibernate Mapping DTD 3.0//EN'
        'http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd'>
<hibernate-mapping>
    <class name="com.njmsita.exam.authentic.model.TroleModel" table="trole">
        <id name="id">
            <generator class="assigned"/>
        </id>
        <properties name="name"/>
        <properties name="remarx"/>
        <properties name="seq"/>

        <many-to-one name="parent" column="pid" class="com.njmsita.exam.authentic.model.TroleModel"/>

        <set name="childs">
            <key column="pid"/>
            <one-to-many class="com.njmsita.exam.authentic.model.TroleModel"/>
        </set>
        <set name="tresources" table="trole_tresource">
            <key column="id"></key>
            <many-to-many column="trole_id" class="com.njmsita.exam.authentic.model.TresourceModel"/>
        </set>
    </class>

</hibernate-mapping>
